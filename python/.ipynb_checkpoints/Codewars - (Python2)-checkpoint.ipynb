    "    i = 0\n",
    "    while len(str(abs(n))) > 1:\n",
    "        i += 1\n",
    "        n = reduce(lambda x, y: x*y, [int(i) for i in str(n)])\n",
    "    return(i)\n",
    "        \n",
    "persistence(4134)"
